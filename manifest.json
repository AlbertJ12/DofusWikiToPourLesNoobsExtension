{
  "manifest_version": 3,
  "name": "Dofus Quest Linker",
  "version": "1.72",
  "description": "Adds a button on any Dofus Wiki page to open the corresponding DofusPourLesNoobs page with French names for quests",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.dofusdb.fr/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://dofuswiki.fandom.com/wiki/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "96": "icon.png"
  },
  "action": {
    "default_title": "Dofus Quest Linker"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dofus-quest-linker@example.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["websiteContent"]
      }
    },
    "gecko_android": {
      "strict_min_version": "142.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["dofusquestimg.png"],
      "matches": ["*://dofuswiki.fandom.com/*"]
    }
  ]
}
